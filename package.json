{
  "name": "vscode-sql-formatter-bigquery",
  "displayName": "BigQuery SQL Formatter",
  "description": "Format sql files using the @googleapis/nodejs-bigquery npm package",
  "version": "0.1.0",
  "publisher": "yo16",
  "repository": {
    "type": "git",
    "url": "https://github.com/googleapis/nodejs-bigquery.git"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "sql",
    "formatter",
    "bigquery"
  ],
  "activationEvents": [
    "onCommand:extension.formatBQ-SQL",
    "onLanguage:sql"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.formatBQ-SQL",
        "title": "Format SQL"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BQ-SQL Formatter",
      "properties": {
        "sql-formatter.dialect": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "sql",
            "n1q1",
            "db2",
            "pl/sql"
          ],
          "default": "sql",
          "description": "Which dialect to format with (sql: Standard SQL, n1ql: Couchbase N1QL, db2: IBM DB2, pl/sql: Oracle PL/SQL)"
        },
        "sql-formatter.uppercase": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Convert keywords to uppercase"
        },
        "sql-formatter.linesBetweenQueries": {
          "scope": "resource",
          "type": "number",
          "minimum": 1,
          "default": 2,
          "description": "Change number of linebreaks between queries"
        }
      }
    }
  },
  "main": "./src/extension.js",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,md,json,css,prettierrc,eslintrc}\""
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-adpyke-es6": "^1.4.13",
    "eslint-config-prettier": "^6.5.0",
    "glob": "^7.1.5",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "sql-formatter-plus": "^1.3.6"
  }
}
